<html lang='en'>

    <head>
        <meta charset='UTF-8' />
        <meta name='viewport' content='width=device-width, initial-scale=1.0' />
        <title>Tech blog</title>
        <link rel='stylesheet' href='/css/output.css' />
    </head>

    <body>
        <div class='flex flex-col w-full justify-start bg-yellow-900 h-full'>
            <header class='flex justify-between gap-2 items-center p-2'>
                <div
                    class='bg-yellow-400 p-2 flex text-center rounded-lg hover:shadow-xl transition-all duration-300'
                >
                    <h1 class='text-4xl text-yellow-900'>
                        <a href='/'>Tech blog</a>
                    </h1>
                </div>
                <nav>
                    <!-- Conditionally render login or logout links -->
                    {{#if logged_in}}
                        <a
                            href='/profile'
                            class='p-2 text-center transition-all duration-300 rounded-lg bg-yellow-400 text-2xl text-yellow-900'
                        >Dashboard</a>
                        <a
                            class='p-2 cursor-pointer text-center transition-all duration-300 rounded-lg bg-yellow-400 text-2xl text-yellow-900'
                            id='logout'
                        >Log out</a>
                    {{else}}
                        <a
                            href='/login'
                            class='p-2 text-center transition-all duration-300 rounded-lg bg-yellow-400 text-2xl text-yellow-900'
                        >Log In / Sign Up</a>
                    {{/if}}
                </nav>
            </header>
            <main>
                <!-- Render the sub layout -->
                {{{body}}}
            </main>
            <footer>

            </footer>
        </div>

        <!-- Render script for logged in users only -->
        {{#if logged_in}}
            <script src='/js/logout.js'></script>
        {{/if}}
    </body>

</html>