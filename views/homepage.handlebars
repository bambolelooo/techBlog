<!-- Loop over each object in the posts array -->
<div class='flex items-center justify-start w-full flex-col gap-2'>
    {{#each posts as |post|}}
        <a
            class='mx-auto flex items-center justify-center w-3/4 bg-yellow-800 text-white rounded-xl'
            href='/post/{{post.id}}'
        >
            <div class="flex flex-col justify-center items-center w-full p-4 hover:shadow-2xl">
                <h2 class='text-2xl'>
                    <div>{{post.title}}</div>
                </h2>
                <p>
                    {{post.content}}
                </p>
                <p class="self-start">Created by {{User.name}}
                    on
                    {{format_date post.date_created}}</p>
            </div>
        </a>
    {{/each}}
</div>