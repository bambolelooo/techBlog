<div class='text-center flex flex-col w-full items-center text-white'>
    <div class="bg-yellow-800 p-3 rounded-xl w-2/3" >
    <h2>{{title}}</h2>

    <p>{{content}}</p>
    <p>Created by {{User.name}} on {{format_date date_created}}</p>
    </div>
        <form class='flex-col comment-form'>
            <div class='p-2 flex justify-between w-full'>
                <label for='comment'>Comment text:</label>
                <input
                    class='rounded-lg p-1 text-black'
                    type='text'
                    id='comment'
                />
            </div>
            <div class='self-center text-center bg-yellow-900 p-2 rounded-lg'>
                <button
                    class='p-2 text-center transition-all duration-300 rounded-lg bg-yellow-400 text-2xl text-yellow-900'
                >Leave a comment</button>
            </div>
        </form>

    {{#each Comments as |comment|}}
        <div class='w-1/3 rounded-xl p-3 flex flex-col'>
            <h1 class='text-xl'>
                {{comment.content}}
            </h1>
            <h2 class='text-lg'>
                Comment by
                {{comment.User.name}}
                created on
                {{format_date comment.date_created}}
            </h2>
        </div>
    {{/each}}
</div>
<script src='/js/post.js'></script>