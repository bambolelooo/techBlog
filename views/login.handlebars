<div class="flex justify-center gap-5">
  <div class="bg-yellow-800 w-1/3 p-3 rounded-xl text-white items-center">
    <h2 class="text-2xl text-center">Log In</h2>

    <form class="flex-col login-form">
      <div class="p-2 flex justify-between">
        <label for="email-login">Email:</label>
        <input class="rounded-lg p-1 text-black" type="text" id="email-login" />
      </div>
      <div class="p-2 flex justify-between">
        <label for="password-login">Password:</label>
        <input class="rounded-lg p-1 text-black" type="password" id="password-login" />
      </div>
      <div class="self-center text-center bg-yellow-900 p-2 rounded-lg">
        <button class="btn btn-primary" type="submit">Log In</button>
      </div>
    </form>
  </div>
  <div class="bg-yellow-800 w-1/3 p-3 rounded-xl text-white items-center">
    <h2 class="text-2xl text-center">Sign Up</h2>

    <form class="flex-col signup-form">
      <div class="p-2 flex justify-between">
        <label for="name-signup">Name:</label>
        <input class="rounded-lg p-1 text-black" type="text" id="name-signup" />
      </div>
      <div class="p-2 flex justify-between">
        <label for="email-signup">Email:</label>
        <input class="rounded-lg p-1 text-black" type="text" id="email-signup" />
      </div>
      <div class="p-2 flex justify-between">
        <label for="password-signup">Password:</label>
        <input class="rounded-lg p-1 text-black" type="password" id="password-signup" />
      </div>
      <div class="self-center text-center bg-yellow-900 p-2 rounded-lg">
        <button class="btn btn-primary" type="submit">Sign Up</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>
